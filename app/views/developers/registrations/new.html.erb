<%= stylesheet_link_tag 'developers' %>

<div class="card">
  <article class="card-body mx-auto" style="max-width: 350px; margin-top: -20px">
    <img class="card-img-top" src="<%= asset_path('logo.svg')%>" alt="", width="250", height="250">
    <h4 class="card-title mt-3 text-center">Create Account</h4>
    <p class="text-center">Get started with your Developer account</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="fa fa-user"></i>
          </span>
        </div>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Full name', type: 'text', required: true %>
      </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="far fa-user"></i>
            </span>
          </div>
          <%= f.text_field :username, class: 'form-control', placeholder: 'Username', type: 'text', required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: 'Email address', type: 'email', required: true %>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-lock"></i>
            </span>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Create password', type: 'password', minlength: 6, required: true %>
        </div>
        <!-- form-group// -->
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fa fa-lock"></i>
            </span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Repeat password', type: 'password', required: true %>
        </div>
        <!-- form-group// -->
        <div class="custom-file">
          <%= f.file_field :avatar, class: 'custom-file-input', type: 'file'%>
          <label class="custom-file-label" for="customFile">Choose avatar</label>
        </div>
        <%= render 'developers/shared/error_messages', resource: resource %>
        <div class="form-group" style="margin-top: 20px">
          <%= f.submit "Create Account", class: 'btn btn-primary btn-block' %>
        </div>
        <!-- form-group// -->
        <p class="text-center">Have an account?
          <a href="sign_in">Log In</a>
        </p>
        <% end %>
  </article>
</div>
